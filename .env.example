# Neural Operator Foundation Lab - Environment Configuration

# Basic Configuration
PROJECT_NAME=neural-operator-foundation-lab
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Python Configuration
PYTHONPATH=./src
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1

# CUDA/GPU Configuration
CUDA_VISIBLE_DEVICES=0,1,2,3
CUDA_LAUNCH_BLOCKING=0
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512

# Training Configuration
BATCH_SIZE=32
LEARNING_RATE=1e-3
NUM_EPOCHS=100
MIXED_PRECISION=true
GRADIENT_CLIPPING=1.0

# Data Configuration
DATA_ROOT=./data
CACHE_ROOT=./cache
MODEL_ROOT=./models
CHECKPOINT_ROOT=./checkpoints

# Distributed Training
MASTER_ADDR=localhost
MASTER_PORT=29500
WORLD_SIZE=1
RANK=0
LOCAL_RANK=0

# Weights & Biases (Optional)
# WANDB_PROJECT=neural-operator-lab
# WANDB_ENTITY=your-team
# WANDB_API_KEY=your-api-key
# WANDB_MODE=online

# MLflow (Optional)
# MLFLOW_TRACKING_URI=http://localhost:5000
# MLFLOW_EXPERIMENT_NAME=neural-operators
# MLFLOW_S3_ENDPOINT_URL=http://localhost:9000

# Tensorboard
TENSORBOARD_LOG_DIR=./logs/tensorboard

# Security
# MODEL_SIGNING_KEY=your-signing-key
# DATA_ENCRYPTION_KEY=your-encryption-key

# Performance Monitoring
ENABLE_PROFILING=false
PROFILE_OUTPUT_DIR=./profiles
MEMORY_PROFILING=false

# Testing
TEST_DATA_SIZE=small
RUN_SLOW_TESTS=false
ENABLE_CUDA_TESTS=true

# Development Tools
AUTO_RELOAD=true
CODE_FORMATTING=true
TYPE_CHECKING=true

# External Services (Optional)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=neural_ops
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=password

# Redis (Optional)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=

# AWS Configuration (Optional)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_DEFAULT_REGION=us-west-2
# S3_BUCKET=your-bucket

# Hugging Face (Optional)
# HF_HOME=./hf_cache
# TRANSFORMERS_CACHE=./transformers_cache
# HF_TOKEN=your-hf-token

# Jupyter Configuration
JUPYTER_ENABLE_LAB=true
JUPYTER_PORT=8888
JUPYTER_TOKEN=development-token

# Docker Configuration
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Model Serving (Optional)
# SERVE_PORT=8080
# SERVE_HOST=0.0.0.0
# MAX_BATCH_SIZE=64
# MODEL_VERSION=latest